{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "@composa/ui": ["./projects/ui/src/public-api.ts"],
      "@composa/ui/core": ["./projects/ui/core/src/public-api.ts"],
      "@composa/ui/core/*": ["./projects/ui/core/src/*"],
      "@composa/ui/services": ["./projects/ui/services/src/public-api.ts"],
      "@composa/ui/services/*": ["./projects/ui/services/src/*"],
      "@composa/ui/components": ["./projects/ui/components/src/public-api.ts"],
      "@composa/ui/components/*": ["./projects/ui/components/src/*"],
      "@composa/ui/models": ["./projects/ui/models/src/public-api.ts"],
      "@composa/ui/models/*": ["./projects/ui/models/src/*"],
      "@composa/ui/utils": ["./projects/ui/utils/src/public-api.ts"],
      "@composa/ui/utils/*": ["./projects/ui/utils/src/*"],
      "@composa/ui/core/internal": ["./projects/ui/core/internal/src/public-api.ts"],
      "@composa/ui/core/internal/*": ["./projects/ui/core/internal/src/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [],
  "include": [
    "projects/**/*.ts",
    "src/**/*.ts"
  ],
  "references": [
    { "path": "./projects/ui/tsconfig.lib.json" },
    { "path": "./projects/ui/tsconfig.spec.json" }
  ]
}
